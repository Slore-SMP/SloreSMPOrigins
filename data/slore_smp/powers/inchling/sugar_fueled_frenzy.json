{
   "name":"Sugar-Fueled Frenzy",
   "description":"The Inchling's unique metabolism reacts intensely to sugar. Consuming it triggers a powerful \"sugar rush\", granting them unparalleled speed and enhanced saturation. However, indulging too much or too often in this sweet temptation risks overstimulation, potentially leading to nausea, blurred vision, and rapid hunger depletion.",
   "type":"origins:multiple",
   "consume_resource":{
      "type":"origins:resource",
      "min":0,
      "max":1,
      "hud_render":{
         "should_render":false
      },
      "start_value":0
   },
   "indulging_resource":{
      "type":"origins:resource",
      "min":0,
      "max":5,
      "hud_render":{
         "should_render":false
      },
      "start_value":0
   },
   "eat":{
      "type":"apugli:edible_item",
      "item_condition":{
         "type":"origins:ingredient",
         "ingredient":{
            "item":"minecraft:sugar"
         }
      },
      "food_component":{
         "hunger":4,
         "saturation":1.0,
         "meat":false,
         "always_edible":true,
         "snack":true
      },
      "use_action":"eat",
      "sound":"minecraft:entity.donkey.eat",
      "entity_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
               "change":1,
               "operation":"add"
            },
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
               "change":1,
               "operation":"add"
            }
         ]
      },
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
               "comparison":"==",
               "compare_to":0
            },
            {
               "type":"origins:resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
               "comparison":"!=",
               "compare_to":5
            }
         ]
      }
   },
   "consume_effects":{
      "type":"origins:action_over_time",
      "rising_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:apply_effect",
               "effects":[
                  {
                     "effect":"minecraft:saturation",
                     "duration":80,
                     "amplifier":3,
                     "is_ambient":true,
                     "show_particles":false,
                     "show_icon":true
                  },
                  {
                     "effect":"minecraft:speed",
                     "duration":80,
                     "amplifier":10,
                     "is_ambient":true,
                     "show_particles":false,
                     "show_icon":true
                  }
               ]
            },
            {
               "type":"origins:delay",
               "action":{
                  "type":"origins:change_resource",
                  "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
                  "change":0,
                  "operation":"set"
               },
               "ticks":80
            }
         ]
      },
      "falling_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:saturation"
            },
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:speed"
            }
         ]
      },
      "interval":1,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
               "comparison":"==",
               "compare_to":1
            },
            {
               "type":"origins:resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
               "comparison":"!=",
               "compare_to":5
            }
         ]
      }
   },
   "indulging_effects":{
      "type":"origins:action_over_time",
      "rising_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:apply_effect",
               "effects":[
                  {
                     "effect":"minecraft:nausea",
                     "duration":1200,
                     "amplifier":0,
                     "is_ambient":true,
                     "show_particles":false,
                     "show_icon":true
                  },
                  {
                     "effect":"minecraft:hunger",
                     "duration":1200,
                     "amplifier":10,
                     "is_ambient":true,
                     "show_particles":false,
                     "show_icon":true
                  }
               ]
            },
            {
               "type":"origins:delay",
               "action":{
                  "type":"origins:and",
                  "actions":[
                     {
                        "type":"origins:change_resource",
                        "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
                        "change":0,
                        "operation":"set"
                     },
                     {
                        "type":"origins:change_resource",
                        "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
                        "change":0,
                        "operation":"set"
                     }
                  ]
               },
               "ticks":1200
            }
         ]
      },
      "falling_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:nausea"
            },
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:hunger"
            }
         ]
      },
      "interval":1,
      "condition":{
         "type":"origins:resource",
         "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
         "comparison":"==",
         "compare_to":5
      }
   },
   "indulging_blurred_vision":{
      "type":"origins:shader",
      "shader":"minecraft:shaders/post/blur.json",
      "toggleable":false,
      "condition":{
         "type":"origins:resource",
         "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
         "comparison":"==",
         "compare_to":5
      }
   },
   "reset":{
      "type":"origins:action_on_callback",
      "entity_action_added":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
               "change":0,
               "operation":"set"
            },
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
               "change":0,
               "operation":"set"
            }
         ]
      },
      "entity_action_removed":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
               "change":0,
               "operation":"set"
            },
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
               "change":0,
               "operation":"set"
            }
         ]
      },
      "entity_action_respawned":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_consume_resource",
               "change":0,
               "operation":"set"
            },
            {
               "type":"origins:change_resource",
               "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
               "change":0,
               "operation":"set"
            }
         ]
      }
   }
}