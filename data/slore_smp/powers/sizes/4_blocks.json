{
    "name": "Giant",
    "description": "You are 4 blocks tall.",
    "type": "origins:action_on_callback",
    "entity_action_chosen": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:height 2 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:width 2 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:reach 2 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:step_height 2 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:jump_height 1.35 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale persist set true @s"
            }
        ]
    },
    "entity_action_lost": {
        "type": "origins:execute_command",
        "command": "scale reset @s"
    }
}